#include<stdio.h>

int main(){
    int num,i,flag = 0;
printf("enter the value of num : ");
scanf("%d",&num);
    if(num == 0||num ==1){
        flag = 1;
    }
    
    for(i = 2;i<=num/2;i++){
        if(num%i ==0){
            flag = 1;
            break;
        }
    }     
if(flag == 0){
    printf("%d is prime no",num);
}    

else{
    printf("%d is not a prime no",num);
}
}
